    {% for post in posts %}
        <div class="post-home" id="">
            <div class="post-header-home">
                <div class="avatar-post-home">
                    <img src="{{ asset('image/avatar/avatar.jpg') }}" alt="avatar">
                </div>
                <div class="user-name-and-time-post-home">
                    <a href=""><div><h5>{{ post['fullname'] }}</h5></div></a>
                    <div>{{ post['upload_time'] }}</div>
                </div>
                <div class="option-post-home dropstart">
                    <button type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <div><i class="bi-three-dots"></i></div>
                    </button>
                    <ul class="dropdown-menu tab-option-post-home">
                        <li class="dropdown-item item-option-post-profile" data-post-id="{{ post['id'] }}">Delete<i class="bi-trash3-fill"></i></li>
                        <li class="dropdown-item item-option-post-profile" data-post-id="{{ post['id'] }}">Hiden<i class="bi-incognito"></i></li>
                        <li class="dropdown-item item-option-post-profile" data-post-id="{{ post['id'] }}">Report<i class="bi-lightning-fill"></i></li>
                    </ul>
                </div>
            </div>
            <div class="caption-post-home">
                <p>{{ post['caption'] }}</p>
            </div>
            <div class="post-body-home">
                <div class="img-post-home">
                    {% if post['image'] != '' %}
                        <img src="{{ asset('image/post/' ~  post['image'] ) }}" alt="img-post">
                    {% endif %}
                </div>
            </div>
            <div class="post-footer-home">
                <hr class="separator-comment-with-post-home" style="margin: 0; margin-left: 2rem">
                <div class="tym-block-post-home">
                    <div class="tym-post-home"><i class="bi-heart icon-tym-post-home" data-post-id="{{ post['id'] }}"></i></div>
                    <div class="count-tym-post-home">{{ post['total_like'] }}</div>
                </div>
                <div class="comment-block-post-home">
                    <div class="comment-post-home" data-post-id="{{ post['id'] }}"><i class="bi-chat-right-dots"></i></div>
                    <div class="count-comments-post-home">{{ post['total_comment'] }}</div>
                </div>
            </div>
