<title>{% block title %}Change Password{% endblock %}</title>
<link rel="icon" href="{{ asset('image/decorate/logo.png') }}" sizes="128x128">

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/profile/updateInfor.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
{% endblock %}
{% block body %}
    <div class="block-change-pass">
        <div class="btn-return-profile" data-user-id="{{ app.user.id }}"><i class="bi-arrow-return-right"></i></div>
        <div class="title-change-password">Change Password</div>
        {{ form_start(changes_password) }}
        {{form_row(changes_password.password,{'full_name':'password'})}}
        {{form_row(changes_password.new_password.first,{'full_name':'newPassword'})}}
        {{form_row(changes_password.new_password.second,{'full_name':'confirmPassword'})}}
        {{ form_end(changes_password) }}
        {% if error %}
            <div class="message-change-password-success" style="color: red; text-align: center;">{{ message }}</div>
        {% else %}
            <div class="message-change-password-error" style="color: green; text-align: center;">{{ message }}</div>
        {% endif %}
    </div>
{% endblock %}
{% block subScript %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
          //go to profile when click return profile
        $('.btn-return-profile').click(function (){
            var userId = $(this).data('user-id');
            location.href = '/profile/'+userId;
        });
    </script>
{% endblock %}